<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".0" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="#C4C4C4"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="User Registration"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline" />

            <TextView
                android:id="@+id/tv_new_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="18dip"
                android:fontFamily="@font/poppins_regular"
                android:text="First Name:"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

            <EditText
                android:id="@+id/edt_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/back_edt"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:textColor="@color/black"
                android:paddingHorizontal="7dp"
                android:paddingVertical="7dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_new_reminder"
                android:autofillHints="Enter your first name" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dip"
                android:fontFamily="@font/poppins_regular"
                android:text="Last Name:"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_fname" />

            <EditText
                android:id="@+id/edt_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/back_edt"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:textColor="@color/black"
                android:paddingHorizontal="7dp"
                android:paddingVertical="7dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_edit"
                android:autofillHints="Enter your last name"/>


            <TextView
                android:id="@+id/tv_emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dip"
                android:fontFamily="@font/poppins_regular"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_lname" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/back_edt"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingHorizontal="7dp"
                android:paddingVertical="7dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_emailLabel"
                android:autofillHints="Enter your email" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dip"
                android:fontFamily="@font/poppins_regular"
                android:text="Set Password:"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_email" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/back_edt"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingHorizontal="7dp"
                android:paddingVertical="7dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tv4"
                android:autofillHints="Enter your password" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dip"
                android:fontFamily="@font/poppins_regular"
                android:text="Re-enter Password:"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_pwd" />

            <EditText
                android:id="@+id/edt_cpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/back_edt"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingHorizontal="7dp"
                android:paddingVertical="7dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tv5"
                android:autofillHints="" />

            <CheckBox
                android:id="@+id/cb_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:text="Your personal information will be collected as part of the identity verification process to prevent identity theft or fraud, and for the government to be able to reach you.."
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/edt_cpwd"
                tools:layout_editor_absoluteX="25dp"
                android:focusableInTouchMode="true"
                android:focusable="true" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="#D1D5DB"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_terms">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:paddingVertical="7dp"
                    android:text="Continue"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_pwd" />

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/mcv_continue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>